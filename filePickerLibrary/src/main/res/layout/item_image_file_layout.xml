<?xml version="1.0" encoding="utf-8"?>
<com.zwc.filepicker.widget.AspectRatioFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    app:aspectRatio="1">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:id="@+id/select_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="7dp"
        android:paddingBottom="7dp">

        <ImageView
            android:id="@+id/select_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/filepick_icon_un_selected" />
    </FrameLayout>

    <TextView
        android:id="@+id/duration_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="00:09" />
</com.zwc.filepicker.widget.AspectRatioFrameLayout>